<!DOCTYPE html>
<html>
<html>
<head>
    <script type="text/javascript" src="https://cdn-hangzhou.goeasy.io/goeasy.js"></script>
    <script type="text/javascript">
        var goeasy = new GoEasy({
            appkey: 'BC-554a3c0772034f42bf753a901bb0b5b7'
        });
        goeasy.subscribe({
            channel: 'letschat ',
            onMessage: function(message){
                //收到消息的第一行，打出日志，以这个时间作为检查的标准
                alert('Receive：'+message.content);
            }
        });


        function publishMessage() {
            var publishMessage = document.getElementById("content").value;
            goeasy.publish({
                channel: 'demo',
                message: publishMessage,
                onFailed: function (error) {
                    alert(error.code+" : "+error.content);
                },
                onSuccess: function(){
                    document.getElementById("content").value='';
                }
            });
        }



    </script>
</head>
<body>
<textarea rows="3" cols="20" id="content">

</textarea>
<button id="fasong" onclick="publishMessage()">Send</button>



</body>


</html>